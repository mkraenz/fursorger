{
    "compilerOptions": {
        "target": "ES2017",
        "module": "CommonJs",
        "strict": false,
        "noImplicitReturns": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "forceConsistentCasingInFileNames": true,
        "outDir": "build",
        "skipLibCheck": true
    },
    "exclude": ["node_modules", "build"]
}
